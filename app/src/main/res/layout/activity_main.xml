<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/toolbar"
        android:layout_width="411dp"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <EditText
        android:id="@+id/Operand1"
        android:layout_width="380dp"
        android:layout_height="49dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="19dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Enter the first operand"
        android:inputType="number"
        android:textColorHint="#757575"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resultNum"
        android:layout_width="232dp"
        android:layout_height="194dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="422dp"
        android:layout_marginEnd="91dp"
        android:ems="10"
        android:textAlignment="center"
        android:textSize="96sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/plus"
        android:layout_width="61dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="238dp"
        android:layout_marginEnd="334dp"
        android:text="+"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/minus"
        android:layout_width="61dp"
        android:layout_height="48dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="238dp"
        android:layout_marginEnd="260dp"
        android:text="-"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/result"
        android:layout_width="127dp"
        android:layout_height="65dp"
        android:layout_marginStart="141dp"
        android:layout_marginTop="321dp"
        android:layout_marginEnd="143dp"
        android:text="Result"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/divide"
        android:layout_width="61dp"
        android:layout_height="48dp"
        android:layout_marginStart="331dp"
        android:layout_marginTop="238dp"
        android:layout_marginEnd="19dp"
        android:text=":"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/clear"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="148dp"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="31dp"
        android:text="CLEAR"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/multiply"
        android:layout_width="61dp"
        android:layout_height="48dp"
        android:layout_marginStart="259dp"
        android:layout_marginTop="238dp"
        android:layout_marginEnd="91dp"
        android:text="Ã—"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Operand2"
        android:layout_width="380dp"
        android:layout_height="49dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="158dp"
        android:layout_marginEnd="19dp"
        android:ems="10"
        android:hint="Enter the second operand"
        android:inputType="number"
        android:textColorHint="#757575"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Warning1"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="249dp"
        android:text="Input first operand."
        android:textColor="#C42A27"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/Operand1" />

    <TextView
        android:id="@+id/Warning2"
        android:layout_width="155dp"
        android:layout_height="21dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="244dp"
        android:text="Input second operand."
        android:textColor="#C42A27"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/Operand2" />

</androidx.constraintlayout.widget.ConstraintLayout>